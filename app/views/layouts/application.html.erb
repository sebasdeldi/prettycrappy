<!DOCTYPE html>
<html>
<head>
  <title>FckingLife</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="background-image"></div>
	<header>
		<!-- NAVBAR -->
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		  	<div class="container">
		  		  <!-- Brand and toggle get grouped for better mobile display -->
		  		  <div class="navbar-header">
		  		    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		  		      <span class="sr-only">Toggle navigation</span>
		  		      <span class="icon-bar"></span>
		  		      <span class="icon-bar"></span>
		  		      <span class="icon-bar"></span>
		  		    </button>

		  		    <a class="navbar-brand" href=<%=root_path%>><span>Pretty</span><span class="dark-orange">Crappy</span></a>
		  		  </div>

		  		  <!-- Collect the nav links, forms, and other content for toggling -->
		  		  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		  		    <ul class="nav navbar-nav">
					  <li><%= link_to "Post!", new_post_path %></li>	
		  		      <li><a href="#">Best</a></li>
		  		      <li><a href="#">Deserved</a></li>
		  		      <li><a href="#">Random</a></li>

		  		      
		  		    </ul>
		  		    
		  		    <ul class="nav navbar-nav navbar-right">
		  		      <!--ELEMENTS PLACED AT THE RIGHT OF THE NAVBAR-->
		  		      <% if signed_in? %>
		  		      	<li><%= link_to "Log Out", logout_path, method: :delete %></li>
		  		      <%else%>
						<li><%= link_to "Log In", login_path %></li>
						<li><%= link_to "Register", new_user_path %></li>
		  		      <%end%>
		  		      
		  		    </ul>

		  		  </div><!-- /.navbar-collapse -->
		  		</div><!-- /.container-fluid -->
		  	</div>
		    
		</nav>
		<!--NAVBAR END -->

	</header>

<%= yield %>
	<footer>
		Built by <a href="https://instagram.com/sebasdeldi">Sebasti√°n Delgado</a> - 2016
	</footer>
</body>
</html>
