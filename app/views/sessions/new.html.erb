<div class="row">
	<div class="main-container">
		<div class="col col-sm-8 no-padding">
			<%= form_tag controller: :sessions, action: :create do %>
				<div class="posts-portion">
					<h1>Log In</h1>
					<div class="form-group">
						<%= label_tag(:email, "E-mail", class: 'lbl' ) %>
						<%= text_field_tag(:email, nil, class: 'form-control input-lg') %>
					</div>
					<div class="form-group">
						<%= label_tag(:password, "Password", class: 'lbl') %> 
						<%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
					</div>

					<%= submit_tag("Log In", class: "btn btn-lg btn-block btn-grey last") %>
				</div>
			<%end%>
		</div>

		<!-- PORTION WHERE THE ADS AND WIDGETS ARE LOCATED -->
		<div class="col col-sm-4 no-padding">
			<div class="widgets-portion">

				<div class="widgets-upper">
					<%= render 'login_widget' %>
				</div>


				<div class="widgets-lower">
					<%= render 'categories_widget' %>
				</div>
				
			</div>
		</div>
	</div>
	
</div>